@model DictusClaudi.Models.DictEntry

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.WordStem)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Word Stems
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WordStem)
        </dd>
        <dt class="col-sm-2">
            English Translation
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WordTranslation)
        </dd>
        @if (Model.Age != null)
        {
            <dt class="col-sm-2">
                Time Period
            </dt>
            <dd class="col-sm-10">
                <div class="dctooltip">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-question-circle" viewBox="0 0 16 16">
                      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                      <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z"/>
                    </svg>
                    @Html.DisplayFor(model => model.DispAge)
                    <span class="dctooltiptext">
                        @Html.DisplayFor(model => model.AgeDetails)
                    </span>
                </div>
            </dd>
        }
        @if (Model.Area != null)
        {
            <dt class="col-sm-2">
                Domain
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DispArea)
            </dd>
        }
        @if (Model.Geo != null)
        {
            <dt class="col-sm-2">
                Location
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DispGeo)
            </dd>
        }
        @if (Model.Frequency != null)
        {
            <dt class="col-sm-2">
                Word Frequency
            </dt>
            <dd class="col-sm-10">
                <div class="dctooltip">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-question-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z"/>
                    </svg>
                    @Html.DisplayFor(model => model.DispFrequency)
                    <span class="dctooltiptext">
                        @Html.DisplayFor(model => model.FrequencyDetails)
                    </span>
                </div>
            </dd>
        }
        @if (Model.Declension != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Declension)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Declension)
            </dd>
        }
        @if (Model.Gender != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DispGender)
            </dd>
        }
        @if (Model.Connotation != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Connotation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DispConnotation)
            </dd>
        }
    </dl>
</div>

<div>
    <a href="javascript:history.go(-1)">Back</a>
</div>

<style>
/* Tooltip container */
.dctooltip {
  position: relative;
  display: inline-block;
}

/* Tooltip text */
.dctooltip .dctooltiptext {
  visibility: hidden;
  width: 300%;
  background-color: black;
  color: #fff;
  text-align: center;
  padding: 5px 0;
  border-radius: 6px;
 
  /* Position the tooltip text - see examples below! */
  position: absolute;
  z-index: 1;
  top: -5px;
  left: 105%; 
}

/* Show the tooltip text when you mouse over the tooltip container */
.dctooltip:hover .dctooltiptext {
  visibility: visible;
}
</style>
